<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/callStatus"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_pause_black_24dp"
            android:text="Pause"
            android:background="@drawable/button_white"
            android:textColor="@android:color/white"
            android:drawableTint="@android:color/white"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_white"
            android:drawableTop="@drawable/ic_dialpad_black_24dp"
            android:textColor="@android:color/white"
            android:drawableTint="@android:color/white"
            android:text="Keyboard"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_call_end"
            android:background="@drawable/button_red"
            android:text="Close"
            android:textColor="@android:color/holo_red_dark"
            android:drawableTint="@android:color/holo_red_dark"
            android:onClick="Cancel"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_white"
            android:drawableTop="@drawable/ic_add_call"
            android:drawableTint="@android:color/white"
            android:textColor="@android:color/white"
            android:text="Add Call"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_white"
            android:drawableTop="@drawable/recoreding_24px"
            android:text="Recording"
            android:drawableTint="@android:color/white"
            android:textColor="@android:color/white"

            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_white"
            android:drawableTop="@drawable/ic_headset_black_24dp"
            android:text="Headphone"
            android:drawableTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>